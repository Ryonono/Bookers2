<body>
    <% if user_signed_in? %>
  <div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
    <div class="col-lg-4">
    <h1>User info</h1>
      <p>
        <strong>Image</strong>
      </p>
        <%= attachment_image_tag current_user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
        <table class="table">
            <tbody>
              <tr>
          	  <th>name</th>
          	  <th><%= current_user.name %></th>
            </tr>
              <tr>
            	  <th>introduction</th>
            	  <th><%= current_user.introduction %></th>
              </tr>
            </tbody>
         </table>

        <% if current_user %>
          <p><%= link_to "Profile Edit", edit_user_path(current_user), class: "pull-right" %></p>
           <% else %>
          <p>うまく表示されていない</p>
        <% end %>

      <h3>New Book</h3>

      <%= form_with model:@book, local:true do |f| %>

      <h4>Title</h4>

      <%= f.text_field :title %>

      <h4>Body</h4>

      <%= f.text_area :opinion %><br>

      <%= f.submit 'Create Book' %>

      <% end %>

    <% end %>
    </div>

<div class="col-lg-8">