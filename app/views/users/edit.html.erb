<% if flash[:notice] %>
  <p style="color: #00ff00;"><%= flash[:notice] %></p>
<% end %>

<h1>User info</h1>

 <%= render 'error_form', locals: { user: @user } %>

<%= form_with model:@user, local:true do |f| %>
  <div class="form-group has-icon">
    <label class="control-label sr-only" for="inputEmail">Name</label>
    <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"Name"%>
    <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
  </div>
  <!-- ここに追加 -->
  <div class="form-group has-icon">
    <div class="user-edit-image">
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
    </div>
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
  </div>
  <div class="form-group has-icon">
    <label class="control-label sr-only" for="inputEmail">Introduction</label>
    <%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"Introduction"%>
    <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
  </div>
  <%= f.submit "Update User", class:"btn btn-lg  btn-success btn-block btn-base-1 mt-20" %>
<% end %>