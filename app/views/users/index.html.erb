<body>
    <% if user_signed_in? %>
  <div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
  <div class="col-xs-3">
    <h1>User info</h1>
      <!--後で付け加える-->
      <p>
        <strong>Image</strong>
      </p>
        <%= attachment_image_tag current_user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
        <table class="table">
            <tbody>
              <tr>
          	  <th>name</th>
          	  <th><%= current_user.name %></th>
            </tr>
        <tr>
          	  <th>introduction</th>
          	  <th><%= current_user.introduction %></th>
            </tr>
            <!--READMEにいったんintroductionの部分を移動させてある-->
            </tbody>
       </table>

        <% if current_user %>
          <p><%= link_to "Profile Edit", edit_user_path(current_user), class: "pull-right" %></p>
        <% else %>
          <p>うまく表示されていない</p>
        <% end %>

      <h3>New book</h3>

      <%= render 'error_form', locals: { book: @book } %>

      <%= form_with model:@book, local:true do |f| %>

      <h4>title</h4>

      <%= f.text_field :title %>

      <h4>opinion</h4>

      <%= f.text_area :body %><br>

      <%= f.submit 'Create Book' %>

      <% end %>

    <% end %>
     </div>

<div class="col-xs-9">
    <h2>Users</h2>

    <table class="table table-striped col-xs-3">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @users.each do |user| %>
      <tr>
        <!--このattatchmentがうまく作動していない,一人一人に対応していない-->
        <td>
          <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "20x20" %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
      <% end %>
  </tbody>
</table>
  </div>
  </div>
  </div>