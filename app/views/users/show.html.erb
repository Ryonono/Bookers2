<% if flash[:notice] %>
  <p style="color: #00ff00;"><%= flash[:notice] %></p>
<% end %>

<body>
    <% if user_signed_in? %>
  <div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
  <div class="col-xs-3">
    <h1>User info</h1>
      <!--後で付け加える-->
      <p>
        <strong>Image</strong>
      </p>
        <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
        <table class="table">
            <tbody>
              <tr>
          	  <th>name</th>
          	  <!--いったん@usersにしているが、おそらくこのままだとうまく出力されない-->
          	  <th><%= @user.name %></th>
            </tr>
        <tr>
          	  <th>introduction</th>
          	  <th><%= @user.introduction %></th>
            </tr>
            <!--READMEにいったんintroductionの部分を移動させてある-->
            </tbody>
       </table>

        <% if @user == current_user %>
          <p><%= link_to "Profile Edit", edit_user_path(@user), class: "pull-right" %></p>
        <% end %>

      <h3>New book</h3>
      <!--もしかしたらこの部分を変えないといけないのかも-->
      <%= render 'error_form', locals: { book: @book } %>

      <%= form_with model:@book, local:true do |f| %>

      <h4>title</h4>

      <%= f.text_field :title %>

      <h4>opinion</h4>

      <%= f.text_area :body %><br>

      <%= f.submit 'Create Book' %>

      <% end %>

    <% end %>
    </div>

<div class="col-xs-9">
  <h1>Books</h1>
<table class="table table-striped">
  <tr>
    <th></th>
    <th width="200">title</th>
    <th width="500">opinion</th>
    <th></th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td>
    <%= link_to user_path(@user) do %>
    <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "20x20" %>
    <% end %>
    </td>
    <td>
    <%= link_to book_path(book.id) do %>
    <%= book.title %>
    <% end %>
    </td>
    <td><%= book.body %></td>
    <td>
      <% if book.user == current_user %>
      <%= link_to "Show", book_path(book) %>
      <% end %>
    </td>
    <td>
      <% if book.user == current_user %>
       <%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>

  </tr>
  <% end %>
</table>
</div>
</div>
</div>
